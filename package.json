{
  "name": "ihoku-monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -pt run build",
    "build:ihoku": "yarn workspace @intks/ihoku run build",
    "build:docs": "yarn workspace @intks/ihoku-doc run build",
    "start:docs": "yarn workspace @intks/ihoku-doc run start",
    "dev:docs": "yarn workspace @intks/ihoku-doc run dev",
    "lint": "eslint ."
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0"
  }
}
